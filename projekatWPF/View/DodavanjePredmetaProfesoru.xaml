<Window x:Class="projekatWPF.View.DodavanjePredmetaProfesoru"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekatWPF.View"
        xmlns:ns="clr-namespace:projekatWPF.Localization"
        mc:Ignorable="d"
        Title="{ns:Loc Dodavanje predmeta}" Height="340" Width="478" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="{ns:Loc Predmeti:}" HorizontalAlignment="Left" Height="33" Margin="10,10,0,0" VerticalAlignment="Top" Width="88"/>
        <ListBox Name="lListaPredmeta" HorizontalAlignment="Left" Height="205" Margin="10,48,0,0" VerticalAlignment="Top" Width="437" d:ItemsSource="{d:SampleData ItemCount=5}" Loaded="lListaPredmeta_Loaded" SelectionMode="Multiple"/>
        <Button Name="bPotvrdi" Content="{ns:Loc Potvrdi}" HorizontalAlignment="Left" Height="30" Margin="243,266,0,0" VerticalAlignment="Top" Width="82" Click="bPotvrdi_Click"/>
        <Button Name="bOdustani" Content="{ns:Loc Odustani}" HorizontalAlignment="Left" Height="30" Margin="365,266,0,0" VerticalAlignment="Top" Width="82" Click="bOdustani_Click"/>

    </Grid>
</Window>
